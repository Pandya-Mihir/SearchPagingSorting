@model IEnumerable<SearchPagingSorting.App_Data.customer_table>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<div>
    @Html.ActionLink("Back to List", "Index" )
</div>


<form method="get">

    <table class="table table-bordered table-striped">

        <tr>
            <th>
               @*<input type="text" name="IdSs" class="col-md-12" /><br />*@
                <br />@Html.DisplayNameFor(model => model.customer_id)
            </th>
            <th>
                <input type="text" name="FnameSs" class="col-md-12" /><br />
                @Html.DisplayNameFor(model => model.Cust_fname)
            </th>
            <th>
                <input type="text" name="SnameSs" class="col-md-12" /><br />
                @Html.DisplayNameFor(model => model.csut_sname)
            </th>
            <th>
                <input type="text" name="EmailSs" class="col-md-12" /><br />
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                <input type="text" name="CountrySs" class="col-md-12" /><br />
                @Html.DisplayNameFor(model => model.Country)
            </th>
            <th>
                <input type="text" name="StateSs" class="col-md-12" /><br />
                @Html.DisplayNameFor(model => model.State)
            </th>
            <th>
                <input type="text" name="CitySs" class="col-md-12" /><br />
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                <br />
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th><input type="submit" class="btn btn-success col-md-12 " hidden/><br />
                
            </th>


        </tr>
        @if (Model.Count() == 0)
        {
                <tr>
                    <td colspan="7">No data Found</td>
                </tr>
        }
        else { 
        foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(ModelItem => item.customer_id)</td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cust_fname)
                </td>
                <td>
                   @Html.DisplayFor(modelItem => item.csut_sname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Country)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.State)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsActive)
                </td>
                <td>

                    @Html.ActionLink("Edit", "Edit", new { id = item.customer_id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.customer_id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.customer_id })

                </td>
            </tr>
        }
    }

    </table>
</form>